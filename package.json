{
  "name": "bussola-financeira-be",
  "version": "0.0.1",
  "description": "API for accessing the backend of the 'BÃºssola financeira' application",
  "author": "Danilo Marques de Melo",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "dev:docker": "wait-port database_dev:5432 && npm run db:sync && npm run db:seed && npm run start:dev",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/src/main.js",
    "docker:up": "docker compose up",
    "docker:up:d": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:rebuild": "docker compose build --no-cache",
    "db:sync": "npx prisma db push",
    "db:seed": "npx prisma db seed",
    "prisma:migrate": "docker exec -it bussola-financeira npx prisma migrate dev",
    "prisma:reset": "docker exec -it bussola-financeira npx prisma migrate reset",
    "prisma:generate:local": "npx prisma generate",
    "prisma:studio": "docker exec -it bussola-financeira npx prisma studio --hostname 0.0.0.0",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "lint:prettier:check": "prettier --check .",
    "lint:prettier:fix": "prettier --write .",
    "lint:eslint:check": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "db:sync:test": "NODE_ENV=test npx prisma db push",
    "test:e2e:ci": "npm run db:sync:test && npm run db:seed && npm run test:e2e",
    "test:e2e:local": "docker compose exec app sh -c 'export DATABASE_URL=$DATABASE_URL_TEST && npm run test:e2e:ci'",
    "prepare": "husky"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/jwt": "^11.0.2",
    "@nestjs/platform-express": "^11.0.1",
    "@prisma/client": "^6.16.0",
    "bcryptjs": "^3.0.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "prisma": "^6.16.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/swagger": "^11.2.0",
    "@nestjs/testing": "^11.0.1",
    "@scalar/nestjs-api-reference": "^1.0.1",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.7",
    "@types/bcryptjs": "^2.4.6",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.7",
    "@types/supertest": "^6.0.2",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0",
    "wait-port": "^1.1.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^src/(.*)$": "<rootDir>/$1"
    }
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  }
}
